@model AvansSurplusMealService.ViewModels.LoginViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AccountLayout";
}

<main>
    <div class="container mb-3 InlogBox InlogBox-Content">
        <div class="text-center">
            <form class="form-group" asp-action="LoginUser" asp-controller="Account" method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="UserName">Gebruikersnaam</label>
                    <input class="form-control" type="text" asp-for="UserName" placeholder="Voer hier uw gebruikersnaam in">
            </div>
            <div class="mb-3">
                    <label class="form-label" asp-for="Password">Wachtwoord</label>
                    <input class="form-control" type="password" asp-for="Password">
            </div>
                <button class="ImportantBtn" type="submit">Inloggen</button>
        </form>
        </div>
    </div>


    <div class="container mb-3 InlogBox InlogBox-Content">
        <div class="text-center">
            <h2>Medewerkers login</h2>
            <form class="form-group" asp-action="LoginUser" asp-controller="Account" method="post">
                <div class="mb-3">
                    <label class="form-label" for="UserName">Gebruikersnaam medewerker</label>
                    <input class="form-control" type="text" for="UserName" placeholder="Voer hier uw gebruikersnaam in">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Password">Wachtwoord</label>
                    <input class="form-control" type="password" for="Password">
                </div>
                <button class="ImportantBtn" type="submit">Inloggen</button>
            </form>
        </div>
    </div>

    <!--Registratie knop-->
    <div class="container InlogBox InlogBox-Content text-center">
        <h3 class="text-center">Nog geen account? Meld je nu aan!</h3>
        <a class="text-center"asp-action="Registration">Registreren</a>
    </div>
</main>
