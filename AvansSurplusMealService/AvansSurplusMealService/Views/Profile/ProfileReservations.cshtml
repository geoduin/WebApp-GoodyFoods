@model AvansSurplusMealService.ViewModels.ProfileViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}
<div class="container text-center">
<section class="row">
    <div class="col-lg-12 col-md-5">
<h3 class="TitleBorder">Locatie</h3>
<article>
<table class="tableBody">
    <tbody>
            <tr>
                <th class="TableHeader">Naam</th>
                <th class="TableHeader">Deadline</th>
                <th class="TableHeader">Prijs</th>
                <th class="TableHeader">Status</th>
                <th class="TableHeader">Gereserveerd op</th>
            </tr>
                        @foreach(var meals in Model.student.MealReservations){
                            <tr>
                                <td class="TableD">@meals.Name</td>
                                <td class="TableD">@meals.DeadlineDate.ToShortDateString()</td>
                                <td class="TableD">@meals.Price</td>
                            @if(@meals.Opgehaald){
                                <td class="TableD">Opgehaald</td>
                            } else{
                                <td class="TableD">Nog niet opgehaald</td>
                            }
                            @if(meals.ReservationDate.HasValue){
                                <td class="TableD">@meals.ReservationDate.GetValueOrDefault().ToShortDateString()</td>
                            } else{
                                <td class="TableD">Geen datum</td>
                            }
                                
                          </tr>
                        }
                    </tbody>
                </table>
            </article>
        </div>
    </section>
</div>