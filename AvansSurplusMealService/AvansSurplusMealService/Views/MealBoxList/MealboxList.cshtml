@{
    Layout = "_Layout";
}


<div class="container text-center">
    <!-- Uitklap knop -->
    <div class="row m-4 TagBar">
        <div class="col-lg-3"></div>
        <div class="container text-center col-lg-9">
            <h2>Kies een catagorie</h2>
            <ul class="list-unstyled list-group list-group-horizontal text-center _List">
                <li><button class="TagButton">Optie</button></li>
                <li><button class="TagButton">Optie</button></li>
                <li><button class="TagButton">Optie</button></li>
                <li><button class="TagButton">Optie</button></li>
                <li><button class="TagButton">Optie</button></li>
            </ul>
        </div>
    </div>

    <div class="row">

        <!-- Filterbalk verticaal -->
        <div class="col-lg-3">
            <button>
                Uitklappen
            </button>
            <h2>Filteropties</h2>
            <form action="#" method="post">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="" id="">
                    <label class="form-check-label" for="">
                        Default radio
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="" id="" checked disabled>
                    <label class="form-check-label" for="">
                        Default checked radio
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="" id="">
                    <label class="form-check-label" for="">
                        Default radio
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="" id="" checked disabled>
                    <label class="form-check-label" for="">
                        Default checked radio
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="" id="">
                    <label class="form-check-label" for="">
                        Default radio
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="" id="" checked disabled>
                    <label class="form-check-label" for="">
                        Default checked radio
                    </label>
                </div>
            </form>
        </div>
        <!-- Lijst pakketten -->
        <div class="col-lg-9 FlexBox mb-5">

            @foreach(var i in Model.OriginalList){
                <div class="card m-2 CardPacket">
                    <div class="row no-gutter">
                        <div class="col-md-6">
                            <img src="../css/Placeholder Image.png" alt="Pakket afbeelding" href="#" width="200"
                             height="200" class="card-img">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <a asp-action="MealPacketDetail" asp-controller="MealBoxDetail" asp-route-id=@i.Id>@i.Name</a>
                                </div>                                
                                <p class="">
                                    $ @i.Price<br/>
                                    @i.DeadlineDate.ToShortDateString()
                                </p>
                                <button class="ReserveButton">Reserveer</button>
                                <button class="InfoButton">I</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>